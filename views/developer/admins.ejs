<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admins Â· List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
  <link href="/css/styles.css" rel="stylesheet" />
  <link href="https://cdn.datatables.net/v/bs5/dt-1.13.8/b-2.4.2/b-html5-2.4.2/b-print-2.4.2/datatables.min.css" rel="stylesheet"/>
</head>
<body>
  <%- include('partials/topbar', { user }) %>
  <%- include('partials/sidebar') %>

  <main class="main">
    <div class="container-fluid">
      <div class="d-flex align-items-center justify-content-between mb-4">
        <h2 class="mb-0">Admins</h2>
        <a class="btn btn-primary" href="/developer/admins/new"><i class="bi bi-plus-circle me-2"></i>Add Admin</a>
      </div>

      <div class="card shadow-sm">
        <div class="card-body">
          <table id="adminsTable" class="table table-striped table-hover w-100">
            <thead>
              <tr>
                <th>Picture</th>
                <th>Name</th>
                <th>Email</th>
                <th>Company</th>
                <th>Date Created</th>
                <th>Actions</th>
              </tr>
            </thead>
          </table>
        </div>
      </div>

      <footer class="mt-4 py-3 text-center text-muted border-top">
        <%- include('partials/footer') %>
      </footer>
    </div>
  </main>

  <script src="/vendor/bootstrap.bundle.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.datatables.net/v/bs5/dt-1.13.8/b-2.4.2/b-html5-2.4.2/b-print-2.4.2/datatables.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
  <script>
    $(function () {
      const table = $('#adminsTable').DataTable({
        ajax: { url: '/developer/api/admins', dataSrc: 'data' },
        columns: [
          { data: 'picture', orderable: false, searchable: false, render: (data) => data },
          { data: 'name' },
          { data: 'email' },
          { data: 'company' },
          { data: 'dateCreated' },
          { data: 'actions', orderable: false, searchable: false, render: (data) => data },
        ],
        dom: 'Bfrtip',
        buttons: [
          { extend: 'excelHtml5', title: 'Admins' },
          { extend: 'pdfHtml5', title: 'Admins', orientation: 'landscape', pageSize: 'A4' }
        ],
        responsive: true,
      });

      $(document).on('click', '.btn-delete-admin', async function() {
        const id = $(this).data('id');
        if (!confirm('Delete this admin?')) return;
        try {
          const res = await fetch('/developer/api/admins/' + id, { method: 'DELETE' });
          if (res.ok) table.ajax.reload(null, false);
        } catch (e) {
          alert('Delete failed.');
        }
      });
    });
  </script>
</body>
</html>