<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Licenses Â· List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
  <link href="/css/styles.css" rel="stylesheet" />
  <link href="https://cdn.datatables.net/v/bs5/dt-1.13.8/b-2.4.2/b-html5-2.4.2/b-print-2.4.2/datatables.min.css" rel="stylesheet"/>
</head>
<body>
  <%- include('partials/topbar', { user }) %>
  <%- include('partials/sidebar') %>

  <main class="main">
    <div class="container-fluid">
      <div class="d-flex align-items-center justify-content-between mb-4">
        <h2 class="mb-0">Licenses</h2>
        <a class="btn btn-primary" href="/developer/licenses/new"><i class="bi bi-plus-circle me-2"></i>Add License</a>
      </div>

      <div class="card shadow-sm">
        <div class="card-body">
          <table id="licensesTable" class="table table-striped table-hover w-100">
            <thead>
              <tr>
                <th>ID</th>
                <th>Company</th>
                <th>Start Date</th>
                <th>Expiry Date</th>
                <th>Time Remaining</th>
                <th>Status</th>
                <th>Updated By</th>
                <th>Actions</th>
              </tr>
            </thead>
          </table>
        </div>
      </div>

      <footer class="mt-4 py-3 text-center text-muted border-top">
        <%- include('partials/footer') %>
      </footer>
    </div>
  </main>

  <script src="/vendor/bootstrap.bundle.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.datatables.net/v/bs5/dt-1.13.8/b-2.4.2/b-html5-2.4.2/b-print-2.4.2/datatables.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
  <script>
    $(function () {
      const table = $('#licensesTable').DataTable({
        ajax: { url: '/developer/api/licenses', dataSrc: 'data' },
        columns: [
          { data: 'id' },
          { data: 'company' },
          { data: 'startDate' },
          { data: 'expiryDate' },
          { data: 'timeRemaining' },
          { data: 'status' },
          { data: 'updatedBy' },
          { data: 'actions', orderable: false, searchable: false }
        ],
        dom: 'Bfrtip',
        buttons: [
          { extend: 'excelHtml5', title: 'Licenses' },
          { extend: 'pdfHtml5', title: 'Licenses', orientation: 'landscape', pageSize: 'A4' },
          { extend: 'csv', title: 'Licenses' },
          { extend: 'print', title: 'Licenses' }
        ],
        responsive: true,
        order: [[0, 'desc']]
      });

      // Delete license
      $('#licensesTable').on('click', '.btn-delete-license', function() {
        const id = $(this).data('id');
        if (confirm('Are you sure you want to delete this license?')) {
          $.ajax({
            url: `/developer/api/licenses/${id}`,
            type: 'DELETE',
            success: function() {
              table.ajax.reload();
            },
            error: function() {
              alert('Failed to delete license');
            }
          });
        }
      });
    });
  </script>
</body>
</html>