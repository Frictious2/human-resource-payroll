<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dashboard · HR & Payroll</title>

    <!-- Bootstrap CSS -->
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
        crossorigin="anonymous"
    />

    <!-- Bootstrap Icons -->
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
        rel="stylesheet"
    />

    <!-- FullCalendar CSS -->
    <link
        href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/main.min.css"
        rel="stylesheet"
    />

    <!-- App CSS -->
    <link href="/css/styles.css" rel="stylesheet" />
</head>
<body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-body border-bottom fixed-top">
        <div class="container-fluid">
            <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#mobileNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <a class="navbar-brand fw-semibold" href="/dashboard">
                <i class="bi bi-people-fill me-2"></i> HR & Payroll
            </a>

            <form class="d-none d-md-flex ms-auto me-3" role="search">
                <input class="form-control" type="search" placeholder="Search…" aria-label="Search">
            </form>

            <ul class="navbar-nav mb-2 mb-lg-0 align-items-center">
                <!-- Theme toggle -->
                <li class="nav-item me-2">
                    <button id="themeToggleBtn" class="btn btn-outline-secondary btn-sm" type="button" title="Toggle theme">
                        <i class="bi bi-sun-fill" id="themeIcon"></i>
                    </button>
                </li>

                <!-- Notifications -->
                <li class="nav-item dropdown me-2">
                    <a class="nav-link position-relative" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="Notifications">
                        <i class="bi bi-bell"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">3</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow">
                        <li class="dropdown-header">Notifications</li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-envelope me-2"></i>New message from HR</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-cash-coin me-2"></i>Payroll run completed</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-calendar-event me-2"></i>Upcoming leave request</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-center" href="#">View all</a></li>
                    </ul>
                </li>

                <!-- User menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="/images/hr-image.jpg" alt="User" class="rounded-circle me-2" style="width: 28px; height: 28px; object-fit: cover;">
                        <span class="fw-semibold"><%= (user && user.name) || 'User' %></span>
                        <i class="bi bi-chevron-down ms-1"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-person-circle me-2"></i>Profile</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Sidebar -->
    <!-- Sidebar: replace existing navigation with requested tabs and sub navs -->
    <aside class="sidebar bg-body border-end">
        <div class="px-3 py-4">
            <div class="text-muted text-uppercase small mb-2">Developers</div>
            <nav class="nav nav-pills flex-column">
                <a class="nav-link" href="#"><i class="bi bi-code-slash me-2"></i>Developers</a>
                <a class="nav-link" href="#"><i class="bi bi-plus-circle me-2"></i>Add Developer</a>
            </nav>
    
            <div class="text-muted text-uppercase small mt-4 mb-2">Company</div>
            <nav class="nav nav-pills flex-column">
                <a class="nav-link" href="#"><i class="bi bi-buildings me-2"></i>Companies</a>
                <a class="nav-link" href="#"><i class="bi bi-plus-circle me-2"></i>Add Company</a>
            </nav>
    
            <div class="text-muted text-uppercase small mt-4 mb-2">Admin</div>
            <nav class="nav nav-pills flex-column">
                <a class="nav-link" href="#"><i class="bi bi-shield-lock me-2"></i>Admins</a>
                <a class="nav-link" href="#"><i class="bi bi-plus-circle me-2"></i>Add Admin</a>
            </nav>
    
            <div class="text-muted text-uppercase small mt-4 mb-2">License</div>
            <nav class="nav nav-pills flex-column">
                <a class="nav-link" href="#"><i class="bi bi-card-checklist me-2"></i>Licenses</a>
                <a class="nav-link" href="#"><i class="bi bi-plus-circle me-2"></i>Add License</a>
            </nav>
        </div>
    </aside>

    <!-- Main content -->
    <main class="main">
        <div class="container-fluid">
            <!-- Page title (Create button removed) -->
            <div class="d-flex align-items-center justify-content-between mb-4">
                <div>
                    <h2 class="mb-0">Overview</h2>
                    <div class="text-muted">Quick stats and recent activity</div>
                </div>
                <!-- Create button removed as requested -->
            </div>

            <!-- Stats -->
            <div class="row g-4">
                <div class="col-12 col-md-6 col-xxl-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <div class="text-muted">Employees</div>
                                    <div class="fs-4 fw-semibold">128</div>
                                </div>
                                <i class="bi bi-people fs-2 text-primary"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6 col-xxl-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <div class="text-muted">Monthly Payroll</div>
                                    <div class="fs-4 fw-semibold">$84,250</div>
                                </div>
                                <i class="bi bi-cash-coin fs-2 text-success"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6 col-xxl-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <div class="text-muted">Pending Approvals</div>
                                    <div class="fs-4 fw-semibold">12</div>
                                </div>
                                <i class="bi bi-check2-square fs-2 text-warning"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6 col-xxl-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <div class="text-muted">Staff to Retire</div>
                                    <div class="fs-4 fw-semibold">3</div>
                                </div>
                                <i class="bi bi-hourglass-split fs-2 text-danger"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Payroll Trend -->
            <div class="row g-4 mt-1">
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="fw-semibold">Payroll Trend</span>
                            <span class="text-muted small">Last 6 months</span>
                        </div>
                        <div class="card-body">
                            <canvas id="lineChart" height="120"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Department Charts row: remove donut chart, make bar chart full-width -->
            <div class="row g-4 mt-1">
                <div class="col-12 col-xl-6">
                    <div class="card shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="fw-semibold">Employees by Department (Bar)</span>
                            <span class="text-muted small">Total headcount</span>
                        </div>
                        <div class="card-body">
                            <canvas id="barChart" height="160"></canvas>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-xl-6">
                    <div class="card shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="fw-semibold">Employees by Department (Donut)</span>
                            <span class="text-muted small">Total headcount</span>
                        </div>
                        <div class="card-body">
                            <canvas id="donutChart" height="160"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Calendar -->
            <div class="row g-4 mt-1">
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="fw-semibold">Company Calendar</span>
                            <span class="text-muted small">Leaves, retirements, meetings, holidays</span>
                        </div>
                        <div class="card-body">
                            <div id="calendar"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <footer class="mt-4 py-3 text-center text-muted border-top">
                Copyright HR Payroll - <span id="footerYear"></span> - Powered by Njala Venue
            </footer>
        </div>
    </main>

    <!-- Bootstrap JS -->
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoYz1F1LGjG7Sk3G2CJJH0bQ9aZB3zv5xRk5MQbN9I5k5WQ"
        crossorigin="anonymous"
    ></script>

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <!-- FullCalendar JS -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js"></script>

    <!-- App JS -->
    <script src="/js/dashboard.js"></script>
</body>
</html>